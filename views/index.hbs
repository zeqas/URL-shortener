<div class="container bg-light">
  <h1 class="title text-center text-info">URL Shortener</h1>
  
  <div class="card-body shadow bg-light">
    <form action="/" method="POST" novalidate>

      <div class="input-group mb-3">
        
        <label for="originalURL" class="col-sm-2 col-form-label col-form-label-lg">URL</label>
        <div class="col-sm-9">
          
          <input type="text" class="form-control 
          {{#if urlValidation}} is-invalid {{/if}}" id="originalURL" aria-describedby="basic-addon3" 
          placeholder="Input URL here" 
          {{#if inputURL}} value="{{ inputURL }}" {{/if}}
          name="originURL" required>
          
          <div id="validationServer04Feedback" class="invalid-feedback">
            請輸入有效網址！
          </div>

        </div>
      </div>

      <div class="form-group row mb-3">

        <label for="shortenURL" class="col-sm-2 col-form-label col-form-label-lg">ShortenURL</label>
        <div class="col-sm-9">

          <input type="text" readonly class="form-control" id="shortenURL" {{#if shortenURL}} value="{{ shortenURL }}" {{/if}}>

        </div>
        
        <div class="input-group-append">
          <button class="btn btn-info" id="copy-button" type="button"><i class="fas fa-copy"></i></button>
        </div>
      </div>

      <div class="form-group row justify-content-center mt-3">
        <button type="submit" class="btn btn-success generator-button" style="mt-3">Shorten</button>
      </div>
    </form>
  </div>

</div>